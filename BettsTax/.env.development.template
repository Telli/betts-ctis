# BettsTax Development Environment Configuration Template
# Copy this file to .env.development and update with your local values

# =============================================================================
# DATABASE CONFIGURATION (Local Development)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=BettsTaxDb_Dev
DB_USER=postgres
DB_PASSWORD=your_local_postgres_password

# =============================================================================
# REDIS CONFIGURATION (Local Development)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_local_redis_password

# =============================================================================
# JWT AND SECURITY CONFIGURATION (Development)
# =============================================================================
JWT_SECRET_KEY=development_jwt_secret_key_32_characters_minimum_for_security
JWT_ISSUER=https://localhost:5001
JWT_AUDIENCE=https://localhost:5001
JWT_EXPIRATION_HOURS=24

# Development encryption key (use a real one for production)
ENCRYPTION_MASTER_KEY=development_256_bit_aes_key_in_base64_format_here
ENCRYPTION_MASTER_SALT=development_salt_for_key_derivation_functions

# =============================================================================
# EMAIL CONFIGURATION (Development - use mail traps)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=dev@localhost
SMTP_PASSWORD=dev_password
EMAIL_FROM_ADDRESS=dev@betts.local
EMAIL_FROM_NAME=BettsTax Development

# =============================================================================
# SMS CONFIGURATION (Development - Mock APIs)
# =============================================================================
# Use development/sandbox APIs for Sierra Leone providers
ORANGE_SMS_API_URL=https://sandbox.orange.sl/sms/v1
ORANGE_SMS_API_KEY=development_orange_api_key

AFRICELL_SMS_API_URL=https://sandbox.africell.sl/sms/v1
AFRICELL_SMS_API_KEY=development_africell_api_key

# =============================================================================
# MOBILE MONEY CONFIGURATION (Development - Sandbox)
# =============================================================================
# Orange Money Development
ORANGE_MONEY_API_URL=https://sandbox.orange.sl/money/v1
ORANGE_MONEY_API_KEY=development_orange_money_api_key
ORANGE_MONEY_MERCHANT_ID=dev_merchant_id

# Africell Money Development
AFRICELL_MONEY_API_URL=https://sandbox.africell.sl/money/v1
AFRICELL_MONEY_API_KEY=development_africell_money_api_key
AFRICELL_MONEY_MERCHANT_ID=dev_merchant_id

# =============================================================================
# FILE STORAGE CONFIGURATION (Development)
# =============================================================================
FILE_STORAGE_TYPE=Local
FILE_STORAGE_LOCAL_PATH=./uploads
FILE_STORAGE_MAX_SIZE_MB=50

# =============================================================================
# APPLICATION CONFIGURATION (Development)
# =============================================================================
APPLICATION_BASE_URL=https://localhost:5001
NEXT_PUBLIC_API_URL=http://localhost:5000
ENABLE_SWAGGER=true
ENABLE_ANALYTICS=false

# =============================================================================
# SECURITY CONFIGURATION (Development)
# =============================================================================
CONTENT_SECURITY_POLICY="default-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' ws: wss: http: https:;"

# =============================================================================
# MONITORING CONFIGURATION (Development)
# =============================================================================
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# NOTIFICATION CONFIGURATION (Development)
# =============================================================================
# Optional Slack webhook for development notifications
SLACK_WEBHOOK_URL=

# =============================================================================
# SIERRA LEONE SPECIFIC CONFIGURATION (Development)
# =============================================================================
# Use sandbox/development endpoints
NRA_API_URL=https://sandbox.nra.gov.sl
NRA_API_KEY=development_nra_api_key
NRA_MERCHANT_CODE=dev_merchant_code

BSL_API_URL=https://sandbox.bsl.gov.sl
BSL_API_KEY=development_bsl_api_key

SL_PAYMENT_GATEWAY_URL=https://sandbox.payments.sl
SL_PAYMENT_GATEWAY_KEY=development_payment_gateway_key

# =============================================================================
# BACKUP CONFIGURATION (Development)
# =============================================================================
BACKUP_ENCRYPTION_KEY=development_backup_key_32_chars

# =============================================================================
# PERFORMANCE TUNING (Development)
# =============================================================================
DB_CONNECTION_POOL_SIZE=5
REDIS_CONNECTION_POOL_SIZE=3
CACHE_DEFAULT_TTL=300
CACHE_TAX_RATES_TTL=600
CACHE_EXCHANGE_RATES_TTL=300

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================
ENABLE_DETAILED_ERRORS=true
ENABLE_CORS_ALL_ORIGINS=true
BYPASS_SSL_VALIDATION=true

# Development logging
LOGGING_LEVEL=Debug
ENABLE_SQL_LOGGING=true
ENABLE_REQUEST_RESPONSE_LOGGING=true

# Hot reload settings
DOTNET_WATCH_RESTART_ON_RUDE_EDIT=true
ASPNETCORE_ENVIRONMENT=Development