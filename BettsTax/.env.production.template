# BettsTax Production Environment Configuration Template
# Copy this file to .env.production and update with actual values
# NEVER commit actual environment files to source control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=BettsTaxDb
DB_USER=betts_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_32_CHARACTERS_MIN

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_SECURE

# =============================================================================
# JWT AND SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_MINIMUM_32_CHARACTERS_LONG_AND_SECURE
JWT_ISSUER=https://betts.sl
JWT_AUDIENCE=https://betts.sl
JWT_EXPIRATION_HOURS=8

# Encryption Master Key (256-bit AES key in base64)
ENCRYPTION_MASTER_KEY=CHANGE_THIS_TO_SECURE_256_BIT_AES_KEY_IN_BASE64_FORMAT
ENCRYPTION_MASTER_SALT=CHANGE_THIS_TO_SECURE_SALT_FOR_KEY_DERIVATION

# =============================================================================
# EMAIL CONFIGURATION (Sierra Leone providers)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@betts.sl
SMTP_PASSWORD=CHANGE_THIS_EMAIL_PASSWORD
EMAIL_FROM_ADDRESS=noreply@betts.sl
EMAIL_FROM_NAME=BettsTax Sierra Leone

# =============================================================================
# SMS CONFIGURATION (Sierra Leone Mobile Networks)
# =============================================================================
# Orange Sierra Leone SMS API
ORANGE_SMS_API_URL=https://api.orange.sl/sms/v1
ORANGE_SMS_API_KEY=CHANGE_THIS_ORANGE_API_KEY

# Africell Sierra Leone SMS API
AFRICELL_SMS_API_URL=https://api.africell.sl/sms/v1
AFRICELL_SMS_API_KEY=CHANGE_THIS_AFRICELL_API_KEY

# =============================================================================
# MOBILE MONEY CONFIGURATION (Sierra Leone)
# =============================================================================
# Orange Money Sierra Leone
ORANGE_MONEY_API_URL=https://api.orange.sl/money/v1
ORANGE_MONEY_API_KEY=CHANGE_THIS_ORANGE_MONEY_API_KEY
ORANGE_MONEY_MERCHANT_ID=CHANGE_THIS_MERCHANT_ID

# Africell Money Sierra Leone
AFRICELL_MONEY_API_URL=https://api.africell.sl/money/v1
AFRICELL_MONEY_API_KEY=CHANGE_THIS_AFRICELL_MONEY_API_KEY
AFRICELL_MONEY_MERCHANT_ID=CHANGE_THIS_MERCHANT_ID

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
FILE_STORAGE_TYPE=Local
FILE_STORAGE_LOCAL_PATH=/app/uploads
FILE_STORAGE_MAX_SIZE_MB=10

# For cloud storage (if switching from local)
# FILE_STORAGE_TYPE=AWS
# AWS_ACCESS_KEY_ID=CHANGE_THIS_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=CHANGE_THIS_AWS_SECRET_KEY
# AWS_BUCKET_NAME=betts-tax-documents
# AWS_REGION=us-west-2

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APPLICATION_BASE_URL=https://betts.sl
NEXT_PUBLIC_API_URL=https://betts.sl/api
ENABLE_SWAGGER=false
ENABLE_ANALYTICS=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' wss:; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_ADMIN_PASSWORD

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Slack webhook for deployment notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# SIERRA LEONE SPECIFIC CONFIGURATION
# =============================================================================
# National Revenue Authority Integration
NRA_API_URL=https://api.nra.gov.sl
NRA_API_KEY=CHANGE_THIS_NRA_API_KEY
NRA_MERCHANT_CODE=CHANGE_THIS_NRA_MERCHANT_CODE

# Bank of Sierra Leone Exchange Rate API
BSL_API_URL=https://api.bsl.gov.sl
BSL_API_KEY=CHANGE_THIS_BSL_API_KEY

# Sierra Leone Payment Gateway
SL_PAYMENT_GATEWAY_URL=https://gateway.payments.sl
SL_PAYMENT_GATEWAY_KEY=CHANGE_THIS_PAYMENT_GATEWAY_KEY

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup encryption key
BACKUP_ENCRYPTION_KEY=CHANGE_THIS_BACKUP_ENCRYPTION_KEY_32_CHARACTERS

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Connection pool sizes
DB_CONNECTION_POOL_SIZE=20
REDIS_CONNECTION_POOL_SIZE=10

# Cache TTL settings (in seconds)
CACHE_DEFAULT_TTL=3600
CACHE_TAX_RATES_TTL=86400
CACHE_EXCHANGE_RATES_TTL=3600

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================
# Set to true only for development/testing environments
ENABLE_DETAILED_ERRORS=false
ENABLE_CORS_ALL_ORIGINS=false
BYPASS_SSL_VALIDATION=false

# =============================================================================
# NOTES FOR SIERRA LEONE DEPLOYMENT
# =============================================================================
# 1. Ensure all passwords are at least 12 characters long
# 2. Use unique passwords for each service
# 3. Rotate all keys and passwords regularly
# 4. Never use default credentials in production
# 5. Enable 2FA for all administrative accounts
# 6. Regularly backup encryption keys securely
# 7. Monitor all API integrations with Sierra Leone providers
# 8. Ensure compliance with Sierra Leone Finance Act 2025
